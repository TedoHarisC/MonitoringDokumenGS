@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

@section Styles {
    <style>
        div.dataTables_wrapper div.dataTables_filter label,
        div.dataTables_wrapper div.dataTables_length label {
            margin-bottom: 0;
        }

        div.dataTables_wrapper div.dataTables_filter input {
            width: 240px;
        }

        table.dataTable>thead>tr>th {
            white-space: nowrap;
        }

        .dataTables_scrollBody {
            padding-bottom: .5rem;
        }

        td.dt-actions {
            padding-top: .6rem !important;
            padding-bottom: .6rem !important;
            overflow: visible !important;
        }

        .modal {
            z-index: 2000;
        }

        .modal-backdrop {
            z-index: 1990;
        }
    </style>
}

<!-- [ page-header ] start -->
<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-b-10">Master Data</h5>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Master</a></li>
            <li class="breadcrumb-item">Master Data</li>
        </ul>
    </div>
</div>
<!-- [ page-header ] end -->

<!-- [ Main Content ] start -->
<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
                        <div>
                            <h6 class="mb-0">Master Data</h6>
                            <small class="text-muted">Manage all master data (except Vendors) in one page</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">

                    <ul class="nav nav-tabs" id="masterTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="approval-tab" data-bs-toggle="tab"
                                data-bs-target="#tab-approval" type="button" role="tab" aria-controls="tab-approval"
                                aria-selected="true">
                                Approval Status
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="attachment-tab" data-bs-toggle="tab"
                                data-bs-target="#tab-attachment" type="button" role="tab" aria-controls="tab-attachment"
                                aria-selected="false">
                                Attachment Types
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="contract-tab" data-bs-toggle="tab"
                                data-bs-target="#tab-contract" type="button" role="tab" aria-controls="tab-contract"
                                aria-selected="false">
                                Contract Status
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="invoice-progress-tab" data-bs-toggle="tab"
                                data-bs-target="#tab-invoice-progress" type="button" role="tab"
                                aria-controls="tab-invoice-progress" aria-selected="false">
                                Invoice Progress Status
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="vendor-category-tab" data-bs-toggle="tab"
                                data-bs-target="#tab-vendor-category" type="button" role="tab"
                                aria-controls="tab-vendor-category" aria-selected="false">
                                Vendor Categories
                            </button>
                        </li>
                    </ul>

                    <div class="tab-content pt-3">
                        <!-- Approval Status -->
                        <div class="tab-pane fade show active" id="tab-approval" role="tabpanel"
                            aria-labelledby="approval-tab">
                            <div class="d-flex align-items-center justify-content-between mb-2 flex-wrap gap-2">
                                <div>
                                    <h6 class="mb-0">Approval Status</h6>
                                    <small class="text-muted">Code + Name</small>
                                </div>
                                <div class="d-flex align-items-center gap-2">
                                    <div class="dropdown">
                                        <a class="btn btn-icon btn-light-brand" data-bs-toggle="dropdown"
                                            data-bs-offset="0, 10" data-bs-auto-close="outside"
                                            href="javascript:void(0)">
                                            <i class="feather-paperclip"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-end">
                                            <a id="btnExportApprovalCsv" href="javascript:void(0);"
                                                class="dropdown-item">
                                                <i class="bi bi-filetype-csv me-3"></i>
                                                <span>CSV</span>
                                            </a>
                                            <a id="btnExportApprovalExcel" href="javascript:void(0);"
                                                class="dropdown-item">
                                                <i class="bi bi-filetype-xls me-3"></i>
                                                <span>Excel</span>
                                            </a>
                                        </div>
                                    </div>
                                    <button id="btnCreateApprovalStatus" type="button" class="btn btn-primary">
                                        <i class="feather-plus me-2"></i>
                                        <span>Create</span>
                                    </button>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table id="approvalStatusesTable"
                                    class="table table-striped table-bordered table-hover align-middle w-100">
                                    <thead>
                                        <tr>
                                            <th>Code</th>
                                            <th>Name</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Attachment Types -->
                        <div class="tab-pane fade" id="tab-attachment" role="tabpanel" aria-labelledby="attachment-tab">
                            <div class="d-flex align-items-center justify-content-between mb-2 flex-wrap gap-2">
                                <div>
                                    <h6 class="mb-0">Attachment Types</h6>
                                    <small class="text-muted">Code + Name + AppliesTo + Active</small>
                                </div>
                                <div class="d-flex align-items-center gap-2">
                                    <div class="dropdown">
                                        <a class="btn btn-icon btn-light-brand" data-bs-toggle="dropdown"
                                            data-bs-offset="0, 10" data-bs-auto-close="outside"
                                            href="javascript:void(0)">
                                            <i class="feather-paperclip"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-end">
                                            <a id="btnExportAttachmentCsv" href="javascript:void(0);"
                                                class="dropdown-item">
                                                <i class="bi bi-filetype-csv me-3"></i>
                                                <span>CSV</span>
                                            </a>
                                            <a id="btnExportAttachmentExcel" href="javascript:void(0);"
                                                class="dropdown-item">
                                                <i class="bi bi-filetype-xls me-3"></i>
                                                <span>Excel</span>
                                            </a>
                                        </div>
                                    </div>
                                    <button id="btnCreateAttachmentType" type="button" class="btn btn-primary">
                                        <i class="feather-plus me-2"></i>
                                        <span>Create</span>
                                    </button>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table id="attachmentTypesTable"
                                    class="table table-striped table-bordered table-hover align-middle w-100">
                                    <thead>
                                        <tr>
                                            <th>Code</th>
                                            <th>Name</th>
                                            @* <th>Active</th> *@
                                            <th>Applies To</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Contract Status -->
                        <div class="tab-pane fade" id="tab-contract" role="tabpanel" aria-labelledby="contract-tab">
                            <div class="d-flex align-items-center justify-content-between mb-2 flex-wrap gap-2">
                                <div>
                                    <h6 class="mb-0">Contract Status</h6>
                                    <small class="text-muted">Code + Name</small>
                                </div>
                                <div class="d-flex align-items-center gap-2">
                                    <div class="dropdown">
                                        <a class="btn btn-icon btn-light-brand" data-bs-toggle="dropdown"
                                            data-bs-offset="0, 10" data-bs-auto-close="outside"
                                            href="javascript:void(0)">
                                            <i class="feather-paperclip"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-end">
                                            <a id="btnExportContractCsv" href="javascript:void(0);"
                                                class="dropdown-item">
                                                <i class="bi bi-filetype-csv me-3"></i>
                                                <span>CSV</span>
                                            </a>
                                            <a id="btnExportContractExcel" href="javascript:void(0);"
                                                class="dropdown-item">
                                                <i class="bi bi-filetype-xls me-3"></i>
                                                <span>Excel</span>
                                            </a>
                                        </div>
                                    </div>
                                    <button id="btnCreateContractStatus" type="button" class="btn btn-primary">
                                        <i class="feather-plus me-2"></i>
                                        <span>Create</span>
                                    </button>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table id="contractStatusesTable"
                                    class="table table-striped table-bordered table-hover align-middle w-100">
                                    <thead>
                                        <tr>
                                            <th>Code</th>
                                            <th>Name</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Invoice Progress Status -->
                        <div class="tab-pane fade" id="tab-invoice-progress" role="tabpanel"
                            aria-labelledby="invoice-progress-tab">
                            <div class="d-flex align-items-center justify-content-between mb-2 flex-wrap gap-2">
                                <div>
                                    <h6 class="mb-0">Invoice Progress Status</h6>
                                    <small class="text-muted">Code + Name</small>
                                </div>
                                <div class="d-flex align-items-center gap-2">
                                    <div class="dropdown">
                                        <a class="btn btn-icon btn-light-brand" data-bs-toggle="dropdown"
                                            data-bs-offset="0, 10" data-bs-auto-close="outside"
                                            href="javascript:void(0)">
                                            <i class="feather-paperclip"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-end">
                                            <a id="btnExportInvoiceProgressCsv" href="javascript:void(0);"
                                                class="dropdown-item">
                                                <i class="bi bi-filetype-csv me-3"></i>
                                                <span>CSV</span>
                                            </a>
                                            <a id="btnExportInvoiceProgressExcel" href="javascript:void(0);"
                                                class="dropdown-item">
                                                <i class="bi bi-filetype-xls me-3"></i>
                                                <span>Excel</span>
                                            </a>
                                        </div>
                                    </div>
                                    <button id="btnCreateInvoiceProgressStatus" type="button" class="btn btn-primary">
                                        <i class="feather-plus me-2"></i>
                                        <span>Create</span>
                                    </button>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table id="invoiceProgressStatusesTable"
                                    class="table table-striped table-bordered table-hover align-middle w-100">
                                    <thead>
                                        <tr>
                                            <th>Code</th>
                                            <th>Name</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Vendor Categories -->
                        <div class="tab-pane fade" id="tab-vendor-category" role="tabpanel"
                            aria-labelledby="vendor-category-tab">
                            <div class="d-flex align-items-center justify-content-between mb-2 flex-wrap gap-2">
                                <div>
                                    <h6 class="mb-0">Vendor Categories</h6>
                                    <small class="text-muted">Name</small>
                                </div>
                                <div class="d-flex align-items-center gap-2">
                                    <div class="dropdown">
                                        <a class="btn btn-icon btn-light-brand" data-bs-toggle="dropdown"
                                            data-bs-offset="0, 10" data-bs-auto-close="outside"
                                            href="javascript:void(0)">
                                            <i class="feather-paperclip"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-end">
                                            <a id="btnExportVendorCategoryCsv" href="javascript:void(0);"
                                                class="dropdown-item">
                                                <i class="bi bi-filetype-csv me-3"></i>
                                                <span>CSV</span>
                                            </a>
                                            <a id="btnExportVendorCategoryExcel" href="javascript:void(0);"
                                                class="dropdown-item">
                                                <i class="bi bi-filetype-xls me-3"></i>
                                                <span>Excel</span>
                                            </a>
                                        </div>
                                    </div>
                                    <button id="btnCreateVendorCategory" type="button" class="btn btn-primary">
                                        <i class="feather-plus me-2"></i>
                                        <span>Create</span>
                                    </button>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table id="vendorCategoriesTable"
                                    class="table table-striped table-bordered table-hover align-middle w-100">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- [ Main Content ] end -->

<!-- Modals -->

<div class="modal fade" id="approvalModal" data-bs-backdrop="static" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="approvalForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="approvalModalLabel">Create Approval Status</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="approvalStatusId" />
                    <div class="mb-3">
                        <label class="form-label">Code</label>
                        <input id="approvalCode" class="form-control" />
                    </div>
                    <div class="mb-0">
                        <label class="form-label">Name</label>
                        <input id="approvalName" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="attachmentModal" data-bs-backdrop="static" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="attachmentForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="attachmentModalLabel">Create Attachment Type</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="attachmentTypeId" />
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Code</label>
                            <input id="attachmentCode" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Name</label>
                            <input id="attachmentName" class="form-control" />
                        </div>
                        <div class="col-md-8">
                            <label class="form-label">Applies To</label>
                            <input id="attachmentAppliesTo" class="form-control"
                                placeholder="e.g. Contract / Invoice" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label d-block">Apakah Wajib ?</label>
                            <div class="form-check form-switch mt-2">
                                <input class="form-check-input" type="checkbox" id="attachmentIsRequired" checked>
                                <label class="form-check-label" for="attachmentIsRequired">Wajib</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="contractModal" data-bs-backdrop="static" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="contractForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="contractModalLabel">Create Contract Status</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="contractStatusId" />
                    <div class="mb-3">
                        <label class="form-label">Code</label>
                        <input id="contractCode" class="form-control" />
                    </div>
                    <div class="mb-0">
                        <label class="form-label">Name</label>
                        <input id="contractName" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="invoiceProgressModal" data-bs-backdrop="static" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="invoiceProgressForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="invoiceProgressModalLabel">Create Invoice Progress Status</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="invoiceProgressStatusId" />
                    <div class="mb-3">
                        <label class="form-label">Code</label>
                        <input id="invoiceProgressCode" class="form-control" />
                    </div>
                    <div class="mb-0">
                        <label class="form-label">Name</label>
                        <input id="invoiceProgressName" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="vendorCategoryModal" data-bs-backdrop="static" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="vendorCategoryForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="vendorCategoryModalLabel">Create Vendor Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="vendorCategoryId" />
                    <div class="mb-0">
                        <label class="form-label">Name</label>
                        <input id="vendorCategoryName" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/master-index.js?v=@DateTime.Now.Ticks"></script>
}