@using System.Security.Claims
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    string? currentUserId = User?.FindFirstValue(ClaimTypes.NameIdentifier) ?? string.Empty;
    string? userRole = User?.FindFirstValue(ClaimTypes.Role) ?? string.Empty;
    bool isAdmin = userRole == "SUPER_ADMIN" || userRole == "ADMIN";
}

@section Styles {
    <style>
        div.dataTables_wrapper div.dataTables_filter label,
        div.dataTables_wrapper div.dataTables_length label {
            margin-bottom: 0;
        }

        div.dataTables_wrapper div.dataTables_filter input {
            width: 240px;
        }

        table.dataTable>thead>tr>th {
            white-space: nowrap;
        }

        .dataTables_scrollBody {
            padding-bottom: .5rem;
        }

        td.dt-actions {
            padding-top: .6rem !important;
            padding-bottom: .6rem !important;
            overflow: visible !important;
        }

        .modal {
            z-index: 2000;
        }

        .modal-backdrop {
            z-index: 1990;
        }
    </style>
}

<input type="hidden" id="currentUserId" value="@currentUserId" />
<input type="hidden" id="currentUserIsAdmin" value="@isAdmin.ToString().ToLower()" />

<!-- [ page-header ] start -->
<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-b-10">Contracts</h5>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Transactions</a></li>
            <li class="breadcrumb-item">Contract</li>
        </ul>
    </div>
    <div class="page-header-right ms-auto">
        <div class="page-header-right-items">
            <div class="d-flex align-items-center gap-2 page-header-right-items-wrapper">
                <button id="btnCreateContract" type="button" class="btn btn-primary">
                    <i class="feather-plus me-2"></i>
                    <span>Create Contract</span>
                </button>
            </div>
        </div>
    </div>
</div>
<!-- [ page-header ] end -->

<!-- [ Main Content ] start -->
<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
                        <div>
                            <h6 class="mb-0">Contract List</h6>
                            <small class="text-muted">Manage contracts</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="contractsTable"
                            class="table table-striped table-bordered table-hover align-middle w-100">
                            <thead>
                                <tr>
                                    <th>Contract Number</th>
                                    <th>Vendor</th>
                                    <th>Description</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Contract Status</th>
                                    <th>Approval Status</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- [ Main Content ] end -->

<!-- Create/Edit Modal -->
<div class="modal fade" id="contractModal" data-bs-backdrop="static" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <form id="contractForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="contractModalLabel">Create Contract</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="contractId" />
                    <input type="hidden" id="vendorId" />
                    <input type="hidden" id="contractStatusId" value="2" />
                    <input type="hidden" id="approvalStatusId" value="6" />
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label">Vendor</label>
                            <input id="vendorName" class="form-control" disabled />
                        </div>
                        <div class="col-12 col-md-6" id="contractStatusSection" style="display: none;">
                            <label class="form-label">Contract Status</label>
                            <select id="contractStatusSelect" class="form-control">
                                <option value="">-- Select Contract Status --</option>
                            </select>
                        </div>
                        <div class="col-12 col-md-6" id="approvalStatusSection" style="display: none;">
                            <label class="form-label">Approval Status</label>
                            <select id="approvalStatusSelect" class="form-control">
                                <option value="">-- Select Approval Status --</option>
                            </select>
                        </div>
                        <div class="col-12 col-md-12">
                            <label class="form-label">Contract Number</label>
                            <input id="contractNumber" class="form-control" autocomplete="off" required />
                        </div>
                        <div class="col-12 col-md-12">
                            <label class="form-label">Contract Description</label>
                            <textarea id="contractDescription" class="form-control" rows="3" required></textarea>
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">Start Date</label>
                            <input id="startDate" type="date" class="form-control" required />
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">End Date</label>
                            <input id="endDate" type="date" class="form-control" required />
                        </div>
                    </div>

                    <!-- Attachments Section (only for Edit mode) -->
                    <div id="attachmentsSection" style="display: none;" class="mt-4">
                        <hr />
                        <h6 class="mb-3">Attachments</h6>
                        <div class="mb-3">
                            <label class="form-label">Upload File</label>
                            <input type="file" id="fileUpload" class="form-control"
                                accept=".pdf,.jpg,.jpeg,.png,.doc,.docx,.xls,.xlsx" />
                            <small class="text-muted">Max 10MB. Allowed: PDF, Images, Word, Excel</small>
                        </div>
                        <div id="attachmentsList" class="list-group"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/transaction-contract.js?v=@DateTime.Now.Ticks"></script>
}