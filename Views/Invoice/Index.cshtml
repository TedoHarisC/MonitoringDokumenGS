@using System.Security.Claims
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    var currentUserId = User?.FindFirstValue(ClaimTypes.NameIdentifier) ?? string.Empty;
}

@section Styles {
    <style>
        div.dataTables_wrapper div.dataTables_filter label,
        div.dataTables_wrapper div.dataTables_length label {
            margin-bottom: 0;
        }

        div.dataTables_wrapper div.dataTables_filter input {
            width: 240px;
        }

        table.dataTable>thead>tr>th {
            white-space: nowrap;
        }

        .dataTables_scrollBody {
            padding-bottom: .5rem;
        }

        td.dt-actions {
            padding-top: .6rem !important;
            padding-bottom: .6rem !important;
            overflow: visible !important;
        }

        .modal {
            z-index: 2000;
        }

        .modal-backdrop {
            z-index: 1990;
        }
    </style>
}

<input type="hidden" id="currentUserId" value="@currentUserId" />

<!-- [ page-header ] start -->
<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-b-10">Invoices</h5>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Transactions</a></li>
            <li class="breadcrumb-item">Invoice</li>
        </ul>
    </div>
    <div class="page-header-right ms-auto">
        <div class="page-header-right-items">
            <div class="d-flex align-items-center gap-2 page-header-right-items-wrapper">
                <button id="btnCreateInvoice" type="button" class="btn btn-primary">
                    <i class="feather-plus me-2"></i>
                    <span>Create Invoice</span>
                </button>
            </div>
        </div>
    </div>
</div>
<!-- [ page-header ] end -->

<!-- [ Main Content ] start -->
<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
                        <div>
                            <h6 class="mb-0">Invoice List</h6>
                            <small class="text-muted">Manage invoices</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="invoicesTable"
                            class="table table-striped table-bordered table-hover align-middle w-100">
                            <thead>
                                <tr>
                                    <th>Invoice Number</th>
                                    <th>Vendor</th>
                                    <th>Status</th>
                                    <th class="text-end">Invoice Amount</th>
                                    <th class="text-end">Tax Amount</th>
                                    <th>Created At</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- [ Main Content ] end -->

<!-- Create/Edit Modal -->
<div class="modal fade" id="invoiceModal" data-bs-backdrop="static" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <form id="invoiceForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="invoiceModalLabel">Create Invoice</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="invoiceId" />
                    <input type="hidden" id="vendorId" />
                    <input type="hidden" id="progressStatusId" value="2" />
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label">Vendor</label>
                            <input id="vendorName" class="form-control" disabled />
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">Invoice Number</label>
                            <input id="invoiceNumber" class="form-control" autocomplete="off" required />
                        </div>
                        <div class="col-12 col-md-3">
                            <label class="form-label">Invoice Amount</label>
                            <input id="invoiceAmount" type="number" step="0.01" min="0" class="form-control" required />
                        </div>
                        <div class="col-12 col-md-3">
                            <label class="form-label">Tax Amount</label>
                            <input id="taxAmount" type="number" step="0.01" min="0" class="form-control" required />
                        </div>
                    </div>
                    <small class="text-muted d-block mt-2">Amounts use decimal, e.g. 10000.00</small>

                    <!-- Attachments Section (only for Edit mode) -->
                    <div id="attachmentsSection" style="display: none;" class="mt-4">
                        <hr />
                        <h6 class="mb-3">Attachments</h6>
                        <div class="mb-3">
                            <label class="form-label">Upload File</label>
                            <input type="file" id="fileUpload" class="form-control"
                                accept=".pdf,.jpg,.jpeg,.png,.doc,.docx,.xls,.xlsx" />
                            <small class="text-muted">Max 10MB. Allowed: PDF, Images, Word, Excel</small>
                        </div>
                        <div id="attachmentsList" class="list-group"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/transaction-invoice.js?v=@DateTime.Now.Ticks"></script>
}