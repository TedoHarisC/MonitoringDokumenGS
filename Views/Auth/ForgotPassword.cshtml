@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<main class="auth-cover-wrapper">
    <div class="auth-cover-content-inner">
        <div class="auth-cover-content-wrapper">
            <div class="auth-img">
                <img src="~/lib/templates/images/auth/auth-cover-login-bg.svg" alt="" class="img-fluid">
            </div>
        </div>
    </div>
    <div class="auth-cover-sidebar-inner">
        <div class="auth-cover-card-wrapper">
            <div class="auth-cover-card p-sm-5">
                <div class="wd-50 mb-5">
                    <img src="~/images/logo_small.webp" alt="" class="img-fluid">
                </div>
                <h2 class="fs-20 fw-bolder mb-4">Forgot Password</h2>
                <h4 class="fs-13 fw-bold mb-2">Reset Your Password</h4>
                <p class="fs-12 fw-medium text-muted">Enter your username and email address, and we'll send you
                    instructions to reset your password.</p>

                <form id="forgotPasswordForm" class="w-100 mt-4 pt-2">
                    <div id="forgotPasswordAlertPlaceholder"></div>

                    <div class="mb-4">
                        <label for="inputUsername" class="form-label fw-semibold">Username <span
                                class="text-danger">*</span></label>
                        <input id="inputUsername" name="username" type="text" class="form-control"
                            placeholder="Enter your username" value="" required>
                        <small class="text-muted">The username you use to login</small>
                    </div>

                    <div class="mb-4">
                        <label for="inputEmail" class="form-label fw-semibold">Email Address <span
                                class="text-danger">*</span></label>
                        <input id="inputEmail" name="email" type="email" class="form-control"
                            placeholder="Enter your email address" value="" required>
                        <small class="text-muted">The email address associated with your account</small>
                    </div>

                    <div class="mt-5">
                        <button id="btnSubmit" type="submit" class="btn btn-lg btn-primary w-100">
                            <i class="feather-mail me-2"></i>Send Reset Link
                        </button>
                    </div>
                </form>

                <div class="mt-4 text-center">
                    <a href="@Url.Action("Index", "Auth")" class="fs-11 text-primary">
                        <i class="feather-arrow-left me-1"></i>Back to Login
                    </a>
                </div>

                <div class="mt-5 text-muted text-center">
                    <span>Don't have an account?</span>
                    <a href="@Url.Action("Register", "Auth")" class="fw-bold">Create an Account</a>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script src="~/js/auth-forgot-password.js?v=@DateTime.Now.Ticks"></script>
}