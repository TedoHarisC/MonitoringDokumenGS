@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

@section Styles {
    <style>
        div.dataTables_wrapper div.dataTables_filter label,
        div.dataTables_wrapper div.dataTables_length label {
            margin-bottom: 0;
        }

        div.dataTables_wrapper div.dataTables_filter input {
            width: 240px;
        }

        table.dataTable>thead>tr>th {
            white-space: nowrap;
        }

        td.dt-actions {
            padding-top: .6rem !important;
            padding-bottom: .6rem !important;
            overflow: visible !important;
        }

        .modal {
            z-index: 2000;
        }

        .modal-backdrop {
            z-index: 1990;
        }
    </style>
}

<!-- [ page-header ] start -->
<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-b-10">Admin Users</h5>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Settings</a></li>
            <li class="breadcrumb-item">Admin Users</li>
        </ul>
    </div>
</div>
<!-- [ page-header ] end -->

<!-- [ Main Content ] start -->
<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
                        <div>
                            <h6 class="mb-0">Manage Admin Users & Roles</h6>
                            <small class="text-muted">Only users with ADMIN / SUPER_ADMIN roles are shown in Admin Users
                                tab</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">

                    <ul class="nav nav-tabs" id="adminUsersTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="tab-admin-users-btn" data-bs-toggle="tab"
                                data-bs-target="#tab-admin-users" type="button" role="tab"
                                aria-controls="tab-admin-users" aria-selected="true">
                                Admin Users
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="tab-roles-btn" data-bs-toggle="tab" data-bs-target="#tab-roles"
                                type="button" role="tab" aria-controls="tab-roles" aria-selected="false">
                                Roles
                            </button>
                        </li>
                    </ul>

                    <div class="tab-content pt-3">
                        <!-- Admin Users -->
                        <div class="tab-pane fade show active" id="tab-admin-users" role="tabpanel"
                            aria-labelledby="tab-admin-users-btn">
                            <div class="d-flex align-items-center justify-content-between mb-2 flex-wrap gap-2">
                                <div>
                                    <h6 class="mb-0">Admin Users</h6>
                                    <small class="text-muted">Assign/remove admin roles to users</small>
                                </div>
                                <div class="d-flex align-items-center gap-2">
                                    <button id="btnAddAdminUser" type="button" class="btn btn-primary">
                                        <i class="feather-plus me-2"></i>
                                        <span>Add Admin User</span>
                                    </button>
                                </div>
                            </div>

                            <div class="table-responsive">
                                <table id="adminUsersTable"
                                    class="table table-striped table-bordered table-hover align-middle w-100">
                                    <thead>
                                        <tr>
                                            <th>Username</th>
                                            <th>Email</th>
                                            <th>Roles</th>
                                            <th>Active</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Roles -->
                        <div class="tab-pane fade" id="tab-roles" role="tabpanel" aria-labelledby="tab-roles-btn">
                            <div class="d-flex align-items-center justify-content-between mb-2 flex-wrap gap-2">
                                <div>
                                    <h6 class="mb-0">Roles</h6>
                                    <small class="text-muted">CRUD roles</small>
                                </div>
                                <div class="d-flex align-items-center gap-2">
                                    <button id="btnCreateRole" type="button" class="btn btn-primary">
                                        <i class="feather-plus me-2"></i>
                                        <span>Create</span>
                                    </button>
                                </div>
                            </div>

                            <div class="table-responsive">
                                <table id="rolesTable"
                                    class="table table-striped table-bordered table-hover align-middle w-100">
                                    <thead>
                                        <tr>
                                            <th>Code</th>
                                            <th>Name</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- [ Main Content ] end -->

<!-- Add Admin User Modal -->
<div class="modal fade" id="addAdminUserModal" data-bs-backdrop="static" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <form id="addAdminUserForm">
                <div class="modal-header">
                    <h5 class="modal-title">Add Admin User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <label class="form-label">Select User</label>
                            <select id="addAdminUserSelect" class="form-select"></select>
                            <small class="text-muted">Data All user yang sudah terdaftar</small>
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">Assign Admin Roles</label>
                            <div id="addAdminRoleList" class="border rounded p-2"
                                style="max-height: 180px; overflow:auto;"></div>
                            <small class="text-muted">Only roles with code ADMIN / SUPER_ADMIN are offered here</small>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Manage User Roles Modal -->
<div class="modal fade" id="userRolesModal" data-bs-backdrop="static" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <form id="userRolesForm">
                <div class="modal-header">
                    <h5 class="modal-title">Manage Roles</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="manageUserId" />
                    <div class="mb-2">
                        <div class="fw-semibold" id="manageUserTitle">User</div>
                        <small class="text-muted">Tick roles to assign. Untick to remove.</small>
                    </div>
                    <div id="manageRoleList" class="border rounded p-2" style="max-height: 260px; overflow:auto;"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Role Modal -->
<div class="modal fade" id="roleModal" data-bs-backdrop="static" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="roleForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="roleModalLabel">Create Role</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="roleId" />
                    <div class="mb-3">
                        <label class="form-label">Code</label>
                        <input id="roleCode" class="form-control" placeholder="e.g. ADMIN" />
                    </div>
                    <div class="mb-0">
                        <label class="form-label">Name</label>
                        <input id="roleName" class="form-control" placeholder="e.g. Administrator" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/settings-admin-users.js?v=@DateTime.Now.Ticks"></script>
}