@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

@section Styles {
    <style>
        div.dataTables_wrapper div.dataTables_filter label,
        div.dataTables_wrapper div.dataTables_length label {
            margin-bottom: 0;
        }

        div.dataTables_wrapper div.dataTables_filter input {
            width: 260px;
        }

        table.dataTable>thead>tr>th {
            white-space: nowrap;
        }

        td.dt-actions {
            padding-top: .6rem !important;
            padding-bottom: .6rem !important;
            overflow: visible !important;
        }

        pre.audit-json {
            max-height: 55vh;
            overflow: auto;
            background: #0b1020;
            color: #d7e3ff;
            border-radius: 8px;
            padding: 12px;
            margin: 0;
            font-size: .85rem;
        }

        .modal {
            z-index: 2000;
        }

        .modal-backdrop {
            z-index: 1990;
        }
    </style>
}

<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-b-10">Audit Log</h5>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Settings</a></li>
            <li class="breadcrumb-item">Audit Log</li>
        </ul>
    </div>
</div>

<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between flex-wrap gap-2">
                    <div>
                        <h6 class="mb-0">Audit Logs</h6>
                        <small class="text-muted">Visible only for SUPER_ADMIN</small>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <button id="btnRefreshAudit" type="button" class="btn btn-light">
                            <i class="feather-refresh-cw me-2"></i>Refresh
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="auditTable"
                            class="table table-striped table-bordered table-hover align-middle w-100">
                            <thead>
                                <tr>
                                    <th>Created</th>
                                    <th>User</th>
                                    <th>Entity</th>
                                    <th>EntityId</th>
                                    <th class="text-center">Details</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="auditModal" data-bs-backdrop="static" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Audit Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row g-3">
                    <div class="col-12 col-lg-6">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h6 class="mb-2">Old Data</h6>
                            <button type="button" class="btn btn-sm btn-light" id="btnCopyOld">Copy</button>
                        </div>
                        <pre class="audit-json" id="auditOld"></pre>
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h6 class="mb-2">New Data</h6>
                            <button type="button" class="btn btn-sm btn-light" id="btnCopyNew">Copy</button>
                        </div>
                        <pre class="audit-json" id="auditNew"></pre>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/settings-audit-log.js?v=@DateTime.Now.Ticks"></script>
}