@{
    ViewData["Title"] = "My Notifications";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<!-- [ Main Content ] start -->
<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">My Notifications</h5>
                    <div class="card-header-action">
                        <button type="button" class="btn btn-sm btn-success" id="btnMarkAllRead">
                            <i class="feather-check me-1"></i>Mark All as Read
                        </button>
                        <button type="button" class="btn btn-sm btn-danger" id="btnDeleteAll">
                            <i class="feather-trash-2 me-1"></i>Delete All
                        </button>
                    </div>
                </div>
                <div class="card-body custom-card-action p-0">
                    <!-- Filter Tabs -->
                    <ul class="nav nav-tabs border-bottom" id="notificationTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all"
                                type="button" role="tab" aria-controls="all" aria-selected="true">
                                <i class="feather-list me-1"></i>All
                                <span class="badge bg-primary ms-1" id="badgeAll">0</span>
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="unread-tab" data-bs-toggle="tab" data-bs-target="#unread"
                                type="button" role="tab" aria-controls="unread" aria-selected="false">
                                <i class="feather-bell me-1"></i>Unread
                                <span class="badge bg-danger ms-1" id="badgeUnread">0</span>
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="read-tab" data-bs-toggle="tab" data-bs-target="#read"
                                type="button" role="tab" aria-controls="read" aria-selected="false">
                                <i class="feather-check-circle me-1"></i>Read
                                <span class="badge bg-success ms-1" id="badgeRead">0</span>
                            </button>
                        </li>
                    </ul>

                    <!-- Tab Content -->
                    <div class="tab-content p-3" id="notificationTabContent">
                        <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab">
                            <div class="list-group list-group-flush" id="allNotifications">
                                <!-- Notifications will be loaded here -->
                                <div class="text-center py-5">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    <p class="text-muted mt-2">Loading notifications...</p>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="unread" role="tabpanel" aria-labelledby="unread-tab">
                            <div class="list-group list-group-flush" id="unreadNotifications">
                                <!-- Unread notifications will be loaded here -->
                            </div>
                        </div>
                        <div class="tab-pane fade" id="read" role="tabpanel" aria-labelledby="read-tab">
                            <div class="list-group list-group-flush" id="readNotifications">
                                <!-- Read notifications will be loaded here -->
                            </div>
                        </div>
                    </div>

                    <!-- Empty State -->
                    <div class="text-center py-5 d-none" id="emptyState">
                        <i class="feather-bell text-muted" style="font-size: 64px;"></i>
                        <h5 class="mt-3 text-muted">No Notifications</h5>
                        <p class="text-muted">You don't have any notifications yet.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Email SMTP Testing Section -->
    <div class="row mt-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-mail me-2"></i>Email SMTP Testing
                    </h5>
                    <p class="text-muted mb-0 small">Test your SMTP email configuration</p>
                </div>
                <div class="card-body">
                    <form id="emailTestForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="testEmailAddress" class="form-label">
                                        Recipient Email Address <span class="text-danger">*</span>
                                    </label>
                                    <input type="email" class="form-control" id="testEmailAddress"
                                        placeholder="Enter email address to receive test email" required>
                                    <small class="text-muted">We'll send a test email to this address</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="testEmailTemplate" class="form-label">Email Template</label>
                                    <select class="form-select" id="testEmailTemplate">
                                        <option value="notification">General Notification</option>
                                        <option value="invoice">Invoice Created</option>
                                        <option value="contract">Contract Created</option>
                                        <option value="welcome">Welcome Email</option>
                                    </select>
                                    <small class="text-muted">Select which template to test</small>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary" id="btnSendTest">
                                <i class="feather-send me-1"></i>Send Test Email
                            </button>
                            <button type="button" class="btn btn-outline-secondary" id="btnCheckConfig">
                                <i class="feather-settings me-1"></i>Check SMTP Config
                            </button>
                        </div>
                    </form>

                    <!-- Test Result -->
                    <div id="emailTestResult" class="mt-3 d-none">
                        <div class="alert" role="alert" id="testResultAlert">
                            <div class="d-flex align-items-center">
                                <i class="me-2" id="testResultIcon"></i>
                                <div>
                                    <strong id="testResultTitle"></strong>
                                    <p class="mb-0 small" id="testResultMessage"></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- SMTP Configuration Info -->
                    <div id="smtpConfigInfo" class="mt-4 d-none">
                        <h6 class="mb-3">Current SMTP Configuration</h6>
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <tbody>
                                    <tr>
                                        <td class="fw-semibold" style="width: 200px;">SMTP Provider</td>
                                        <td id="smtpProvider">-</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-semibold">SMTP Host</td>
                                        <td id="smtpHost">-</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-semibold">SMTP Port</td>
                                        <td id="smtpPort">-</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-semibold">From Email</td>
                                        <td id="smtpFromEmail">-</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-semibold">From Name</td>
                                        <td id="smtpFromName">-</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-semibold">Use SSL</td>
                                        <td id="smtpUseSsl">-</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="alert alert-info small">
                            <i class="feather-info me-1"></i>
                            <strong>Note:</strong> Password and username are hidden for security.
                            To change SMTP settings, update the appsettings.json file.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- [ Main Content ] end -->

@section Styles {
    <style>
        .notification-item {
            border-left: 3px solid transparent;
            transition: all 0.2s ease;
        }

        .notification-item:hover {
            background-color: #f8f9fa;
        }

        .notification-item.unread {
            background-color: #f0f7ff;
            border-left-color: #0d6efd;
        }

        .notification-icon {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
            font-size: 18px;
        }

        .notification-content {
            flex: 1;
        }

        .notification-title {
            font-weight: 600;
            margin-bottom: 4px;
            color: #333;
        }

        .notification-message {
            color: #666;
            font-size: 14px;
            margin-bottom: 4px;
        }

        .notification-time {
            font-size: 12px;
            color: #999;
        }

        .notification-actions {
            display: flex;
            gap: 8px;
        }

        .notification-actions .btn {
            padding: 4px 8px;
            font-size: 12px;
        }

        .nav-tabs .nav-link {
            color: #666;
        }

        .nav-tabs .nav-link.active {
            color: #0d6efd;
            font-weight: 600;
        }
    </style>
}

@section Scripts {
    <script src="~/js/notification-page.js?v=@DateTime.Now.Ticks"></script>
}